# Ambica Pharma Chem - Local Environment Configuration
# Copy this file to .env.local and update with your actual credentials

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ambica-pharma-inventory

# JWT Authentication
JWT_SECRET=ambica-pharma-super-secret-jwt-key-production-2024-change-this
NEXTAUTH_URL=http://localhost:3000

# Email Configuration (for password reset emails)
# Gmail: Enable 2FA and create app password at https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# n8n Configuration  
NEXT_PUBLIC_N8N_BASE_URL=http://localhost:5678

# Application Configuration
NEXT_PUBLIC_DASHBOARD_URL=http://localhost:3000
NEXT_PUBLIC_COMPANY_NAME="Ambica Pharma Chem"
NODE_ENV=development
